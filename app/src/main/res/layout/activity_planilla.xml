<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Azure">

    <TextView
        android:id="@+id/txt_tituloPlanilla"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="20dp"
        android:text="Seleccione la planilla..."
        android:textColor="@color/Black"
        android:textSize="25sp"
        android:textAlignment="center"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerViewRep"
        android:layout_width="wrap_content"
        android:layout_height="350dp"
        android:layout_alignStart="@+id/txt_tituloPlanilla"
        android:layout_alignEnd="@+id/txt_tituloPlanilla"
        android:layout_below="@+id/txt_tituloPlanilla"
        android:padding="10dp"
        android:scrollbars="vertical" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/recyclerViewRep"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:orientation="horizontal">

        <android.support.v7.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:alignmentMode="alignBounds"
                android:columnCount="4"
                android:padding="5dp"
                android:rowCount="5">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_column="0"
                    android:layout_columnSpan="4"
                    android:layout_gravity="fill_horizontal"
                    android:layout_row="0"
                    android:background="@color/CornflowerBlue"
                    android:text="TOTALES"
                    android:textAlignment="center"
                    android:textColor="@color/White"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:layout_columnSpan="2"
                    android:layout_gravity="fill_horizontal"
                    android:layout_margin="2dp"
                    android:layout_marginBottom="3dp"
                    android:layout_row="1"
                    android:text="Clientes"
                    android:textColor="@color/Black" />

                <TextView
                    android:id="@+id/txt_clientes"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_column="2"
                    android:layout_columnSpan="2"
                    android:layout_gravity="fill_horizontal"
                    android:layout_margin="2dp"
                    android:layout_marginBottom="3dp"
                    android:layout_row="1"
                    android:text="151"
                    android:textAlignment="center"
                    android:textColor="@color/Black" />

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:layout_columnSpan="2"
                    android:layout_margin="2dp"
                    android:layout_row="2"
                    android:text="Documentos"
                    android:textColor="@color/Black" />

                <TextView
                    android:id="@+id/txt_documentos"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_column="2"
                    android:layout_columnSpan="2"
                    android:layout_gravity="fill"
                    android:layout_margin="2dp"
                    android:layout_row="2"
                    android:text="1151"
                    android:textAlignment="center"
                    android:textColor="@color/Black" />

                <View
                    android:id="@+id/view_line"
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_column="0"
                    android:layout_columnSpan="4"
                    android:layout_marginBottom="2dp"
                    android:layout_marginTop="2dp"
                    android:layout_gravity="fill"
                    android:layout_row="3"
                    android:background="@color/Coral" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:layout_margin="2dp"
                    android:layout_row="4"
                    android:text="CON"
                    android:textColor="@color/Black" />

                <TextView
                    android:id="@+id/txt_contado"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="1"
                    android:layout_gravity="fill_horizontal"
                    android:layout_margin="2dp"
                    android:layout_row="4"
                    android:text="25"
                    android:textAlignment="center"
                    android:textColor="@color/Black" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="2"
                    android:layout_margin="2dp"
                    android:layout_row="4"
                    android:text="CTE"
                    android:textColor="@color/Black" />

                <TextView
                    android:id="@+id/txt_corriente"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="3"
                    android:layout_gravity="fill_horizontal"
                    android:layout_margin="2dp"
                    android:layout_row="4"
                    android:text="26"
                    android:textAlignment="center"
                    android:textColor="@color/Black" />

            </GridLayout>

        </android.support.v7.widget.CardView>

    </LinearLayout>

</RelativeLayout>