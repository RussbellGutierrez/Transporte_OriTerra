<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/cliente"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="2dp"
        android:background="@color/Teal">

        <TextView
            android:id="@+id/txt_datocliente"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:background="@color/Teal"
            android:textColor="@color/White"
            android:textStyle="bold"
            android:textSize="12sp"
            android:text="11111 - Pepe lopez lara bolainas" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/text1"
                android:layout_width="82dp"
                android:layout_height="wrap_content"
                android:background="@color/White"
                android:gravity="center"
                android:textSize="12sp"
                android:text="DirecciÃ³n"
                android:textColor="@color/Black"
                android:paddingTop="3dp"/>
            <TextView
                android:id="@+id/txt_direccion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:background="@color/White"
                android:textColor="@color/Black"
                android:textSize="12sp"
                android:text="Calle las alondras 254"
                android:paddingEnd="3dp"
                android:paddingStart="3dp"
                android:paddingTop="3dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/text3"
                android:layout_width="82dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:background="@color/Beige"
                android:textColor="@color/Black"
                android:textSize="12sp"
                android:text="Negocio" />
            <TextView
                android:id="@+id/txt_negocio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:background="@color/Beige"
                android:textColor="@color/Black"
                android:textSize="12sp"
                android:text="MERCADO"
                android:paddingEnd="3dp"
                android:paddingStart="3dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/text5"
                android:layout_width="82dp"
                android:layout_height="wrap_content"
                android:background="@color/White"
                android:gravity="center"
                android:textSize="12sp"
                android:text="Ruta"
                android:textColor="@color/Black" />
            <TextView
                android:id="@+id/txt_ruta"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:background="@color/White"
                android:textColor="@color/Black"
                android:textSize="12sp"
                android:text="247"
                android:paddingEnd="3dp"
                android:paddingStart="3dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/text11"
                android:layout_width="82dp"
                android:layout_height="wrap_content"
                android:background="@color/Beige"
                android:gravity="center"
                android:textSize="12sp"
                android:text="Estado"
                android:textColor="@color/Black"
                android:paddingBottom="3dp"/>
            <TextView
                android:id="@+id/txt_estado"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:background="@color/Beige"
                android:textColor="@color/Black"
                android:textSize="12sp"
                android:text="Atendido"
                android:paddingEnd="3dp"
                android:paddingStart="3dp"
                android:paddingBottom="3dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/White"
            android:gravity="center"
            android:orientation="horizontal"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginBottom="3dp"
                android:layout_marginTop="5dp"
                android:layout_weight="0.5"
                android:background="@color/White"
                android:gravity="center"
                android:orientation="horizontal">

                <android.support.design.widget.FloatingActionButton
                    android:id="@+id/fab_atendido"
                    style="@style/StateButtonCheck"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:focusable="true"
                    app:fabSize="mini"
                    app:rippleColor="#5AED6E"
                    app:srcCompat="@drawable/check" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginBottom="3dp"
                android:layout_marginTop="5dp"
                android:layout_weight="0.5"
                android:background="@color/White"
                android:gravity="center"
                android:orientation="horizontal">

                <android.support.design.widget.FloatingActionButton
                    android:id="@+id/fab_rechazo"
                    style="@style/StateButtonClose"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:focusable="true"
                    app:fabSize="mini"
                    app:rippleColor="#ED5A5A"
                    app:srcCompat="@drawable/close" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/fletero"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="2dp"
        android:background="@color/Teal">
        <TextView
            android:id="@+id/txt_datofletero"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:background="@color/Teal"
            android:textColor="@color/White"
            android:textStyle="bold"
            android:textSize="12sp"
            android:text="22222 - Juan lopez arias guzman" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/text4"
                android:layout_width="82dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:background="@color/Beige"
                android:textColor="@color/Black"
                android:textSize="12sp"
                android:text="Longitud"/>
            <TextView
                android:id="@+id/txt_longitud"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:background="@color/Beige"
                android:textColor="@color/Black"
                android:textSize="12sp"
                android:text="-11.111111"
                android:paddingEnd="3dp"
                android:paddingStart="3dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/text6"
                android:layout_width="82dp"
                android:layout_height="wrap_content"
                android:background="@color/White"
                android:gravity="center"
                android:textSize="12sp"
                android:text="Latitud"
                android:textColor="@color/Black" />
            <TextView
                android:id="@+id/txt_latitud"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:background="@color/White"
                android:textColor="@color/Black"
                android:textSize="12sp"
                android:text="-77.777777"
                android:paddingEnd="3dp"
                android:paddingStart="3dp"/>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>