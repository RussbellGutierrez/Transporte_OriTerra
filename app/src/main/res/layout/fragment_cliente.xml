<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@color/Azure">



    <TextView
        android:id="@+id/txt_estadoMensaje"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:visibility="gone" />

    <TextView
        android:id="@+id/txt_estadoResultado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:visibility="gone" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_Client"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="20dp"
        android:scrollbars="vertical"
        android:layout_centerVertical="true"/>

    <ProgressBar
        android:id="@+id/pb_cliente"
        style="?android:attr/progressBarStyle"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="250dp"
        android:layout_marginStart="130dp"
        android:indeterminate="true"
        android:visibility="gone" />

    <TextView
        android:id="@+id/txt_mensaje"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/pb_cliente"
        android:layout_below="@+id/pb_cliente"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:text="Un momento porfavor..."
        android:textSize="20sp"
        android:visibility="gone" />


</RelativeLayout>